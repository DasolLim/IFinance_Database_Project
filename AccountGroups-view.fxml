<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se2203b.assignments.ifinance.AccountGroupsController">
    <children>
        <TreeView fx:id="treeView" layoutX="30.0" layoutY="67.0" onMouseClicked="#selectItem" prefHeight="299.0" prefWidth="316.0">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="addNewGroup" mnemonicParsing="false" onAction="#addNewGroup" text="Add New Group" />
                        <MenuItem fx:id="changeGroup" mnemonicParsing="false" onAction="#changeGroupName" text="Change Group Name" />
                        <MenuItem fx:id="deleteGroup" mnemonicParsing="false" onAction="#deleteGroup" text="Delete Group" />
                    </items>
                </ContextMenu>
            </contextMenu></TreeView>
        <TitledPane animated="false" layoutX="373.0" layoutY="67.0" prefHeight="254.0" prefWidth="200.0" text="Add or Change Group Name">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="228.0" prefWidth="140.0">
                    <children>
                        <Label layoutX="26.0" layoutY="14.0" text="Group Name" />
                        <TextField fx:id="groupName" layoutX="24.0" layoutY="42.0" />
                        <Button fx:id="saveBtn" layoutX="122.0" layoutY="87.0" mnemonicParsing="false" onAction="#save" prefHeight="26.0" prefWidth="52.0" text="Save" />
                    </children></AnchorPane>
            </content>
        </TitledPane>
        <Label layoutX="169.0" layoutY="23.0" text="Custom Accounts Groups Form">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Button fx:id="exitBtn" layoutX="373.0" layoutY="339.0" mnemonicParsing="false" onAction="#exit" prefHeight="26.0" prefWidth="200.0" text="Exit" />
    </children>
</AnchorPane>
